{
	"compilerOptions": {
		"baseUrl": ".",
		"lib": ["ESNext", "DOM"],
		"module": "esnext",
		"target": "esnext",
		"moduleResolution": "bundler",
		"moduleDetection": "force",
		"allowImportingTsExtensions": true,
		"allowSyntheticDefaultImports": true,
		"composite": true,
		"declaration": true,
		"downlevelIteration": true,
		"emitDeclarationOnly": true,
		"forceConsistentCasingInFileNames": true,
		"jsx": "preserve",
		"noEmit": true,
		"skipLibCheck": false,
		"strict": true,
		"types": ["@types/bun", "vue"],
		"paths": {
			"~/*": ["*"]
		}
	},
	"include": [
		"features/**/*.md",
		"guide/**/*.md",
		"snippets/**/*.ts",
		"components/**/*.vue"
	],
	"exclude": [
		"node_modules",
		"dist",
		"test",
		"example"
	]
}
