{
	"compilerOptions": {
		"baseUrl": ".",
		"lib": ["ESNext"],
		"module": "esnext",
		"target": "esnext",
		"moduleResolution": "bundler",
		"moduleDetection": "force",
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"composite": true,
		"strict": true,
		"downlevelIteration": true,
		"skipLibCheck": true,
		"jsx": "preserve",
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"allowJs": true,
		"types": ["bun-types"],
		"paths": {
			"~/*": ["src/*"]
		}
	},
	"include": ["src/**/*", "./bunfig.ts"],
	"exclude": ["**/example", "**/dist", "**/node_modules", "**/test"]
}
